@using u19235152_HW03.Models
@model List<FileModel>
@{
    ViewBag.Title = "Index";
}

<h2>Images of any file type</h2>
<h5>......"Media/Images/"folder</h5>

<div class="container-fluid">
    <div class="row">
        @foreach (var imgfile in Model)
        {
        <div class="card col-4">
            <button>
                @Html.ActionLink("Download","Index",
                 new { fileName = imgfile.FileName })
                @*DownloadFile is the Action name in the Controller*@
            </button>
            
            
                <button>
                    @Html.ActionLink("DELETE", "DeleteFile" ,
                   new { fileName =imgfile.FileName })
                    </button>
            </div>
        }
    </div>
</div>

